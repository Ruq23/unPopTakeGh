  <!-- tailwind cdn -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- fontawesome -->
  <script src="https://kit.fontawesome.com/64af63ddf7.js" crossorigin="anonymous"></script>

  <style>
    #hamMenu {
      position: fixed;
      top: 0;
      right: -70%;
      width: 70%;
      height: 100%;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      transition: right 0.5s ease;
    }

    #hamMenu.open {
      right: 0;
    }

    .nav-link {
      font-weight: 700;
      font-size: 18px;
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    #hamMenu.open .nav-link {
      opacity: 1;
      transform: translateY(0);
    }

    #hamMenu.open .nav-link:nth-child(2) {
      transition-delay: 0.3s;
    }

    #hamMenu.open .nav-link:nth-child(3) {
      transition-delay: 0.5s;
    }

    #hamMenu.open .nav-link:nth-child(4) {
      transition-delay: 0.7s;
    }

    #hamMenu.open .nav-link:nth-child(5) {
      transition-delay: 0.9s;
    }

    #hamMenu.open .nav-link:nth-child(6) {
      transition-delay: 1s;
    }

    #hamMenu.open .nav-link:nth-child(7) {
      transition-delay: 1.1s;
    }

    #hamMenu.open .nav-link:nth-child(8) {
      transition-delay: 1.2;
    }

    .menu-open {
      overflow-y: hidden;
    }

    .max-page-width {
      max-width: 1500px;
      width: 100%;
    }
  </style>
</head>
<body class="min-h-screen flex flex-col">
  <header class=" h-16 absolute z-50 w-[100%] flex justify-center bg-[#114E11]">
    <nav class="z-50 flex flex-row justify-between h-16 items-center px-4 sm:px-12 lg:px-16 max-page-width">
      <!-- Desktop view -->
      <div class="flex md:hidden w-[40%]">
        <a href="/">
          <img class="nbi w-40 h-16" src="images/Logo.png" alt="">
        </a>
      </div>
      <a class="hidden md:flex" href="/">
        <img class="nbi w-40 h-16" src="images/Logo.png" alt="">
      </a>
      <div class="gap-4 hidden md:flex md:gap-8 lg:gap-14 text-white">
        <a href="/" class="hover:underline ">Home</a>
        <a href="/" class="hover:underline">About Us</a>
        <a href="/" class="hover:underline">Contact</a>
        <a href="/" class="hover:underline">Explore</a>
        <a href="/" class="hover:underline">Connect</a>
      </div>

      <!-- hamburger button -->
      <button id="hamburger" class="md:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" id="hamburger-icon" class="h-7 w-7 text-white" fill="none"
          viewBox="0 0 28 28" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 6h20M4 14h20m-7 8h7" />
        </svg>
      </button>
    </nav>
  </header>
  <!-- Mobile view -->
  <div id="hamMenu" class="  right-0 bg-white p-4 z-50">
    <button id="closeIcon" class="absolute top-4 right-0 mr-4 sm:mr-12"><i class="fa-solid fa-xmark fa-xl"></i></button>

    <div class="flex flex-col  mt-8">
      <a href="/" class="hover:underline hover:text-[#10B981] py-4 border-b nav-link">Home</a>
      <a href="/" class="hover:underline hover:text-[#10B981] py-4 border-b nav-link">About Us</a>
      <a href="/" class="hover:underline hover:text-[#10B981] py-4 border-b nav-link">Contact</a>
      <a href="/" class="hover:underline hover:text-[#10B981] py-4 border-b nav-link">Explore</a>
      <a href="/" class="hover:underline hover:text-[#10B981] py-4 border-b nav-link">Connect</a>
    </div>
  </div>
      <%- include('./partials/flash') %>

      <main class=" lg:pr-20 xl:pr-28 flex-grow flex justify-center items-center overflow-auto">
        <div class="main-one flex  flex-col-reverse md:flex-row justify-center lg:justify-between items-center h-[100%] max-page-width">
          <div class="one-one hidden lg:block">
            <img class="w-full h-full md:w-[500px] lg:w-[550px] lg:h-[680px] object-contain"
            src="images/Female hand holding iPhone 14 Pro mockup (Mockuuups Studio).png" alt="">
          </div>

          <div class="one-two sm:rounded-[20px] px-5 py-7 md:px-10 md:py-12 mt-20">

            <h6><b> Login to your Account</b></h6>
            <p>Sign In Today, Continue To Share Interesting Unpopular Opinions To The World</p>

            <form action="/login" method="POST">
                <div>
                <input type="text" placeholder="Username" name="username" id="username" required>
            </div>
            <div>
                <input type="password" placeholder="Password" name="password" id="password" required> <br>

            </div>
            <button id="bo">Sign In</button> <br>
            <div class="hrr">
            <!-- <hr> <span> Or </span> <hr> -->
            <div class="db">
                <button id="dbo"><img src="images/flat-color-icons_google.png" alt=""> Continue With Google</button>
                <button id="dbt"> <img src="images/logos_facebook.png" alt=""> Continue With Facebook</button>
            </div>
            <small>Do not Have An Account? <a href="/register">Sign Up</a></small>
             </div>
            </form>
          </div>
        </div>
      </main>


        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

        <script>
          const hamburger = document.getElementById('hamburger');
          const hamMenu = document.getElementById('hamMenu');
          const closeIcon = document.getElementById('closeIcon');
    
          hamburger.addEventListener('click', function() {
              // alert('p')
              hamMenu.classList.toggle('open');
          });
    
          closeIcon.addEventListener('click', function() {
              hamMenu.classList.toggle('open');
              closeIcon.classList.remove('open');
          });
        </script>
</body>
</html>