  <div class="row col-6 offset-3">
    <h1> <%=post.title%></h1>
    <p><b><%=post.body%> </b></p>
     <b>by <a href="/profile/<%=post.profile._id%>"> <%=post.author[0].username%> </a> </b> <br>
    <!-- <h2><%=post.author %></h2> -->
    <!-- <sup><%=post.author[0].username %></sup> -->
    <h3><%=post.profile %></h3>
    <h3><%=post.profile %></h3>

    <form action="/post/<%= post._id %>?_method=DELETE" method="POST">
        <button>DELETE</button>
    </form>

    <a href="/post/<%= post._id %>/edit">Edit</a>
    




    <div>
        <h3>Comments</h3>
        <% if(currentUser) { %> 
            <form action="/post/<%=post._id%>/comments" method="POST">
                <h2>Leave a Comment</h2>
                <!-- <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" class="form-range" min="1" max="5" name="comment[rating]" id="rating">
                </div> -->
                <!-- <div class="mb-3">
                    <label class="form-label" for="name">Full Name</label>
                    <input type="text" class="form-control" name="comment[name]" id="name" required>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="body">Comment</label>
                    <textarea class="form-control" name="comment[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn-success">Submit</button>
              </form>
          <% } %> 
          <h5 style="margin-top: 70px;">Comments</h5>
          <% for (let comment of post.comments) { %> 
            <div class="card mb-3" >
          <div class="mb-3 card-body">
            <h5 class="card-title"><%=comment.author.username%></h5>
            <h5 class="card-title"><%=comment.name%></h5>
            <p class="starability-result" data-rating="<%=comment.rating%>">
              Rated: <%=comment.rating%> stars
            </p>
            <p class="card-text"><%=comment.body%></p>

            <form action="/post/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                <Button class="btn btn-sm btn-danger">Delete</Button>
            </form>

          </div>
        </div>
          <% } %>
            
    </div>
